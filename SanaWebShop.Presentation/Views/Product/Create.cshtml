@model SanaWebShop.Presentation.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Create Product";
}

<h2>Product Creation</h2>

<form id="CreateProductForm">
    <p class="alert alert-info">All fields are <strong>required</strong>.</p>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autofocus = "autofocus", placeholder = "Lenovo Thinkpad E570" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "$ 100" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProductNumber)
        @Html.TextBoxFor(m => m.ProductNumber, new { @class = "form-control", placeholder = "SKU23432" })
        @Html.ValidationMessageFor(m => m.ProductNumber)
    </div>
    <button type="submit" id="CreateProductButton" class="btn btn-primary btn-lg">Save</button>
</form>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/productScripts")

    <script>
        var getUrlCreateProduct = function () {
            var url = '@Url.Action("Create", "Product")';
            return url;
        }

        var cleanFields = function () {
            $("#Name").val("");
            $("#Price").val("");
            $("#ProductNumber").val("");
        }
    </script>
}


    
